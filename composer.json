{
    "name": "restyphp/resty-skeleton",
    "description": "A Resty Framework skeleton application",
    "version": "0.7.1",
    "keywords": ["skeleton", "framework", "microframework", "rest", "resty"],
    "homepage": "https://github.com/restyphp/resty-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Federico Lozada Mosto",
            "email": "mosto.federico@gmail.com",
            "homepage": "http://www.mostofreddy.com.ar",
            "role": "Lead"
        }
    ],
    "require": {
        "php": ">=7.0",
        "restyphp/resty": "0.8.*",
        "restyphp/slim-loggy": "0.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.*",
        "squizlabs/php_codesniffer": "2.7.*"
    },
    "autoload": {
        "psr-4": {
            "Resty\\Api\\": "src/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "ln -sf vendor/bin/resty"
        ],
        "post-install-cmd": [
            "ln -sf vendor/bin/resty"
        ],
        "post-update-cmd": [
            "ln -sf vendor/bin/resty"
        ]
    },
    "suggest": {
        "restyphp/slim-loggy": "Service provider para integracion con componente de logger Loggy (version: 0.1.*)",
        "restyphp/slim-doctrine": "Service provider para integracion con Doctrine y DBAL (version: 0.1.*)"
    }
}
